<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Rules table -->
    <changeSet id="103-create-rules-table" author="nomatter">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="rules" schemaName="rule_info"/>
            </not>
        </preConditions>

        <createTable schemaName="rule_info" tableName="rules">
            <column name="rule_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="currency_code" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="operation_type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="min_amount" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="max_amount" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="rules" schemaName="rule_info"/>
        </rollback>
    </changeSet>

    <!-- Indexes -->
    <changeSet id="104-rules-idx-operation-type" author="nomatter">
        <createIndex indexName="rules_idx_operation_type"
                     tableName="rules"
                     schemaName="rule_info">
            <column name="operation_type"/>
        </createIndex>
        <rollback>
            <dropIndex indexName="rules_idx_operation_type"
                       tableName="rules"
                       schemaName="rule_info"/>
        </rollback>
    </changeSet>

    <changeSet id="105-rules-idx-currency-code" author="nomatter">
        <createIndex indexName="rules_idx_currency_code"
                     tableName="rules"
                     schemaName="rule_info">
            <column name="currency_code"/>
        </createIndex>
        <rollback>
            <dropIndex indexName="rules_idx_currency_code"
                       tableName="rules"
                       schemaName="rule_info"/>
        </rollback>
    </changeSet>

    <changeSet id="106-rules-uq-operation-currency" author="nomatter">
        <createIndex unique="true"
                     indexName="rules_uq_operation_currency"
                     tableName="rules"
                     schemaName="rule_info">
            <column name="operation_type"/>
            <column name="currency_code"/>
        </createIndex>

        <rollback>
            <dropIndex indexName="rules_uq_operation_currency"
                       tableName="rules"
                       schemaName="rule_info"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
