<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %level [exchange-service] [traceId=%X{traceId}, spanId=%X{spanId}] - %msg%n"/>
        </Console>
        <Kafka name="Kafka" topic="log-kafka" syncSend="false">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %level [exchange-service] [traceId=%X{traceId}, spanId=%X{spanId}] - %msg%n"/>
            <Property name="bootstrap.servers">${env:KAFKA_URL:-financeapp-kafka:9092}</Property>
            <Property name="linger.ms">1000</Property>
            <Property name="acks">all</Property>
        </Kafka>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Kafka"/>
        </Root>
        <Logger name="org.apache.kafka" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
